◀private: static▶ std::string ☀Markdown_Table_As_List_Format(model::Sentence const& s, Markdown_Settings const& settings)❰

    std::string text;
    Append_A_Newline(text);
    
    for (auto const& table: s.table){
        for (auto const& it: table.row){
            Append(text," - ");
            for (auto const& row_value: it.row_value){
                Append_With_Newline(text, row_value.value);
            }
        }
        Append_With_Newline(text,"");
    }
    
    return text;
