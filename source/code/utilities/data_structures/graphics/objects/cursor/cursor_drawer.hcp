◀public: static▶ Frame_Elements ☀Draw_Cursor(Position const& pos, Label_Settings & label)❰
    
    Frame_Elements elements;
    for (auto & it: label.cursors){
        if (label.user_state.is_active){
            Draw_Label_Cursor(elements, pos, label, it);
        }
    }
    return elements;
