◀public: static▶ std::string ☀Full_Path_Name(Button_Face_Tree const& structure, tree<Buttoned_Faced_Label>::pre_order_iterator it)❰
    std::string full_name;
    
    while (structure.nodes.parent(it) != nullptr){
        
        full_name = it->label.faces[0].name + "/" + full_name;
        it = structure.nodes.parent(it);
    }
    full_name = it->label.faces[0].name + "/" + full_name;
    
    return full_name;
