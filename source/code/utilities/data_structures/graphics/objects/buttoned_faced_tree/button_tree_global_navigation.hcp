    //get all the nodes to toggle
    auto linear_nodes = Get_Self_And_Recursive_Children(tr,it,end);
    
    //toggle them
    if (!linear_nodes.empty()){
    auto set_to = !Faced_Label_Is_Enabled::Is_Enabled(it->label);
