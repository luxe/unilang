◀public: static▶ void ☀Run() ❰
    
    
    while (true) {
        
        Move_To_Repo_Root();
        std::string results;
        Fresh_Pull(results);
        Record_Working_Hash(results);
        Run_Repo_Tasks(results);
        Fresh_Pull(results);
        Restart_Self_If_Possible(results);
        
    }
