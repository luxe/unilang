◀private: static▶ void ☀Possibly_Change_Case(Token_Value & t, Token_Case_Settings const& settings)❰
    if (settings.change_case){
        t.value = as_wstring(Case_Modifier::As_Modified_Casing(settings.casing,as_string(t.value)));
    }
