◀public: static▶ void ☀Move_To_Next_Player(Game_State & state, Assets & assets) ❰

        if (state.ur_state.player_turn == 1){
            state.ur_state.player_turn = 0;
        }
        else {
            state.ur_state.player_turn = 1;
        }
        
        Reset_Players_For_Turn(state,assets);
